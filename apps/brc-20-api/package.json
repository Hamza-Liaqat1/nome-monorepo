{
  "name": "brc-20-api",
  "version": "0.0.0",
  "description": "the api for the nome brc-20 sale app",
  "type": "module",
  "exports": "./index.js",
  "scripts": {
    "dev": "npm run db:generate && npm run generate-docs && nodemon -q -e ts src/server.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "start": "npm run db:generate && npm run generate-docs && tsx src/server.ts",
    "test": "cross-env NODE_ENV=test vitest",
    "pretest": "cross-env NODE_ENV=test npm run migrate:reset",
    "generate-docs": "tsx src/scripts/generate-docs.ts && redocly build-docs ./docs/openapi.yaml -o ./docs/index.html"
  },
  "author": "Mohamed Huzayen <huzayen@pm.me>",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "5.7.0",
    "bitcoin-address-validation": "^2.2.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-zod-api": "^15.1.0",
    "http-errors": "^2.0.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@redocly/cli": "^1.5.0",
    "@swc/core": "^1.3.100",
    "@swc/helpers": "^0.5.3",
    "@types/express": "^4.17.21",
    "@types/http-errors": "^2.0.4",
    "@types/node": "^20.5.2",
    "nodemon": "^3.0.2",
    "prisma": "^5.7.0",
    "regenerator-runtime": "^0.14.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.6.2",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  }
}

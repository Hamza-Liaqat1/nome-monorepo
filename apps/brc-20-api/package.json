{
  "name": "brc-20-api",
  "version": "0.0.0",
  "description": "the api for the nome brc-20 sale app",
  "type": "module",
  "exports": "./index.js",
  "scripts": {
    "dev": "npm run db:generate && npm run generate-docs && tsx watch --env-file=.env.local src/index.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "start": "npm run db:generate && npm run generate-docs && tsx src/server.ts",
    "generate-docs": "tsx --env-file=.env.local src/scripts/generate-docs.ts && redocly build-docs ./docs/openapi.yaml -o ./docs/index.html"
  },
  "author": "Mohamed Huzayen <huzayen@pm.me>",
  "license": "ISC",
  "dependencies": {
    "@cmdcode/buff": "^2.2.4",
    "@cmdcode/crypto-tools": "^2.6.10",
    "@cmdcode/tapscript": "^1.4.4",
    "@prisma/client": "5.7.0",
    "@scure/bip32": "^1.3.3",
    "@scure/bip39": "^1.2.2",
    "@scure/btc-signer": "^1.1.1",
    "bitcoin-address-validation": "^2.2.3",
    "express": "^4.18.2",
    "express-zod-api": "^15.1.0",
    "http-errors": "^2.0.0",
    "json-stringify-deterministic": "^1.0.12",
    "toad-scheduler": "^3.0.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@redocly/cli": "^1.5.0",
